#ifndef MAYBE_TMPL__
#define MAYBE_TMPL__

template <typename t>
maybe<t>::maybe(const quickcheck &o)
    : r(o) {
    if (!r) new (content) t(o); }

template <typename t> template <typename ... args> void
maybe<t>::mkjust(args &&...params) {
    if (!r) just().~t();
    r = false;
    ::new (content) t(std::forward<args>(params)...); }

#endif /* !MAYBE_TMPL__ */
