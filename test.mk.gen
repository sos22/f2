#! /bin/bash

. shutil

declare -a tests
tests=(beacontest.C
     connpooltest.C
     eqtest.C
     either.C
     listtest.C
     lqueuetest.C
     testbuffer.C
     testdriver.C
     testmap.C
     testorerror.C
     testserialise.C
     teststring.C
     testwaitqueue.C)
declare -a objs
for x in ${tests[@]}
do
    cc $x
    objs[${#objs[*]}]=${x/.C/.o}
done
ld test ${objs[@]} lib.a

target test
