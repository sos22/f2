all: realall

-include config

.SUFFIXES:

include binaries.mk
include lib.mk
include test.mk
include testjob.mk
include tests.mk
include tests/mk

# The all target only builds things which most people would want.  The
# coverage check and test suite are under a different target.
everything: realall covall testall

config: config.gen
	@./$< $@ > $@.tmp && mv -f $@.tmp $@
clean::
	rm -f config *.log *~ *.gcov *-c.gcda *-c.gcno

%: %.gen config
	@./$< $@ > $@.tmp && mv -f $@.tmp $@

